<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PageActivity"
    android:background="#F2F2F2"
    android:fitsSystemWindows="true">
    <ScrollView
        android:id="@+id/scrollview_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/input_bar"
        android:scrollbars="none">
        <LinearLayout
            android:id="@+id/message_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/input_bar"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/h_1"
        android:layout_marginTop="@dimen/h_1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/input_box_page"
        android:layout_alignParentBottom="true">
        <EditText
            android:id="@+id/input_box_page"
            android:layout_width="255dp"
            android:layout_height="match_parent"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="17dp"
            android:padding="5dp"
            android:background="@null"
            android:imeOptions="actionSend"
            android:inputType="text" />
        <RelativeLayout
            android:id="@+id/emoji_button"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/w_1"
            android:layout_marginLeft="@dimen/w_1"
            android:layout_toRightOf="@+id/input_box_page"
            android:layout_toEndOf="@+id/input_box_page"
            android:gravity="center">
            <Button
                style="@style/send_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/input_box_page" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_emoji"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/w_1"
            android:layout_marginLeft="@dimen/w_1"
            android:layout_toRightOf="@+id/emoji_button"
            android:layout_toEndOf="@+id/emoji_button"
            android:gravity="center">
            <Button
                android:id="@+id/send_button"
                style="@style/send_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/input_box_page" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_add" />
        </RelativeLayout>
    </RelativeLayout>
    <com.example.letchat.MyToolBar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        app:remark="陈子怡"
        android:contentInsetStart="0dp"
        tools:targetApi="lollipop">
    </com.example.letchat.MyToolBar>

</RelativeLayout>