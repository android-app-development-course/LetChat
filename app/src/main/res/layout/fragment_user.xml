<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F5F5F5">

        <RelativeLayout
            android:id="@+id/user_msg"
            android:layout_width="350dp"
            android:layout_height="@dimen/h_20"
            android:orientation="horizontal"
            android:background="@drawable/user_msg_bg"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/user_avatar"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:background="@mipmap/ic_launcher"
                android:layout_centerVertical="true"/>

            <RelativeLayout
                android:id="@+id/user_content"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/user_avatar"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vanson"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="好好学习，天天向上。"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/h_1"
                android:layout_marginRight="@dimen/h_1"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/ic_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_edit" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_arrow"
                    android:layout_toRightOf="@+id/ic_edit"
                    android:layout_marginStart="@dimen/h_3"
                    android:layout_marginLeft="@dimen/h_3"/>
            </RelativeLayout>
        </RelativeLayout>

        <TableLayout
            android:id="@+id/user_list"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/h_3"
            android:background="@drawable/user_menu_bg">
            <TableRow>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/user_menu_lefttop"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_marginEnd="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:text="二维码"
                    android:textSize="12sp"
                    android:paddingTop="40dp">
                </Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/user_menu_1middle"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_marginEnd="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:text="相册"
                    android:textSize="12sp"
                    android:paddingTop="40dp">
                </Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/user_menu_righttop"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_marginBottom="1dp"
                    android:text="收藏"
                    android:textSize="12sp"
                    android:paddingTop="40dp">
                </Button>
            </TableRow>
            <TableRow>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/user_menu_leftbottom"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_marginEnd="1dp"
                    android:layout_marginRight="1dp"
                    android:text="陌生人"
                    android:textSize="12sp"
                    android:paddingTop="40dp">
                </Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/user_menu_2middle"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_marginEnd="1dp"
                    android:layout_marginRight="1dp"
                    android:text="发现"
                    android:textSize="12sp"
                    android:paddingTop="40dp">
                </Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_column="2"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/user_menu_rightbottom"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="设置"
                    android:textSize="12sp"
                    android:paddingTop="40dp">
                </Button>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</FrameLayout>