<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_6"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/user_menu_icon"
            android:layout_width="@dimen/h_4"
            android:layout_height="@dimen/h_4"
            android:layout_margin="@dimen/h_3"
            android:background="@drawable/ic_album"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/user_menu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相册"
                android:textSize="15sp"
                android:textColor="#000000"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_arrow"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/h_1"
                android:layout_marginRight="@dimen/h_1"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>