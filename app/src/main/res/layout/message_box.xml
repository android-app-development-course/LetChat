<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/h_1"
    android:layout_marginRight="6dp"
    android:layout_marginEnd="6dp">
    <ImageView
        android:id="@+id/avatar_icon"
        android:layout_width="@dimen/h_6"
        android:layout_height="@dimen/h_6"
        android:background="@mipmap/ic_launcher"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/message_content"
        android:maxWidth="@dimen/w_60"
        android:minHeight="@dimen/h_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/h_1"
        android:paddingBottom="@dimen/h_1"
        android:paddingLeft="@dimen/h_3"
        android:paddingRight="@dimen/h_3"
        android:textSize="10sp"
        android:layout_toStartOf="@+id/avatar_icon"
        android:layout_toLeftOf="@+id/avatar_icon"
        android:layout_marginEnd="@dimen/h_1"
        android:layout_marginRight="@dimen/h_1"
        android:layout_centerVertical="true"
        android:background="@drawable/message_box" />
</RelativeLayout>