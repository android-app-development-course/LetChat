<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.letchat.HeadZoomScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_show"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/test" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-50dp">
                <TextView
                    android:id="@+id/info_remark"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="陈子怡"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:paddingStart="120dp"
                    android:paddingLeft="120dp"
                    android:gravity="center_vertical" />
                <TextView
                    android:id="@+id/info_name"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@+id/info_remark"
                    android:text="昵称：陈一"
                    android:textSize="10sp"
                    android:paddingStart="120dp"
                    android:paddingLeft="120dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/info_name"/>
                <TextView
                    android:id="@+id/info_area"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@+id/info_name"
                    android:text="地区：广东 广州"
                    android:textSize="10sp"
                    android:paddingStart="120dp"
                    android:paddingLeft="120dp"
                    android:gravity="center_vertical"
                    android:background="#ffffff"/>
                <TextView
                    android:id="@+id/info_empty"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@+id/info_area"
                    android:paddingStart="120dp"
                    android:paddingLeft="120dp"
                    android:background="#ffffff"/>
                <RelativeLayout
                    android:id="@+id/info_setting_remark"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/info_empty"
                    android:background="#ffffff"
                    android:layout_marginTop="1dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="设置备注和标签"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_r_arrow"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/info_dynamic"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@+id/info_setting_remark"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff">
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="朋友圈"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:textColor="#000000"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:gravity="center_vertical"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_r_arrow"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/info_more"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/info_dynamic"
                    android:background="#ffffff"
                    android:layout_marginTop="1dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="更多信息"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_r_arrow"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/info_sendmsg"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/info_more"
                    android:background="#ffffff"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="添加好友"
                        android:textSize="15sp"
                        android:textColor="#27408B"
                        android:gravity="center"/>
                </RelativeLayout>

                <!--<RelativeLayout
                    android:id="@+id/info_sendmedia"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/info_sendmsg"
                    android:background="#ffffff"
                    android:layout_marginTop="1dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="音视频通话"
                        android:textSize="15sp"
                        android:textColor="#27408B"
                        android:gravity="center"/>
                </RelativeLayout>-->

            </RelativeLayout>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="-350dp"
                android:background="@drawable/test_icon"/>
        </LinearLayout>

    </com.example.letchat.HeadZoomScrollView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/ic_back_white"/>
</RelativeLayout>